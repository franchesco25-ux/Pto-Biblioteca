@model IEnumerable<Biblioteca.Models.Usuario>

@{
    ViewData["Title"] = "Index";
}

<div class="card">
    <div class="card-header bg-light d-flex justify-content-between align-items-center">
        <h4 class="mb-0">Clientes</h4>
        <a asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-circle"></i> Nuevo Clientes</a>
    </div>
    <div class="card-body">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-12 col-md-6 col-lg-4 col-xl-3 mb-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body d-flex flex-column">
                            <div class="d-flex justify-content-between align-items-end">
                                <span class="badge bg-danger">@Html.DisplayFor(modelItem => item.Rol)</span>
                            </div>

                            <h4 class="card-title mt-2">@Html.DisplayFor(modelItem => item.Nombre) @Html.DisplayFor(modelItem => item.Apellido)</h4>
                            <h6 class="card-subtitle mb-2 text-muted"><strong>Usuario:</strong> @Html.DisplayFor(modelItem => item.UsuarioLogin)</h6>

                            <ul class="list-unstyled mt-3 mb-4">
                                <li><strong>Correo:</strong> @Html.DisplayFor(modelItem => item.Mail)</li>
                                <li><strong>Teléfono:</strong> @Html.DisplayFor(modelItem => item.Telefono)</li>
                                <li><strong>Dirección:</strong> @Html.DisplayFor(modelItem => item.Direccion)</li>
                            </ul>

                            <div class="mt-auto text-center">
                                <a href="#" data-id="@item.UsuarioId" class="btn btn-sm btn-outline-secondary me-1 btn-see-recurso"><i class="bi bi-eye"></i> Ver</a>
                                <a asp-action="Edit" asp-route-id="@item.UsuarioId" class="btn btn-sm btn-outline-primary me-1"><i class="bi bi-pencil"></i> Editar</a>
                                <a asp-action="Delete" asp-route-id="@item.UsuarioId" class="btn btn-sm btn-outline-danger"><i class="bi bi-trash"></i> Eliminar</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

    </div>
</div>



<div class="modal fade" id="infoModal" tabindex="-1" aria-labelledby="infoModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content" id="infoModalContent">
        </div>
    </div>
</div>

<script>
    var url = '@Url.Action("Details", "Clientes")';
</script>