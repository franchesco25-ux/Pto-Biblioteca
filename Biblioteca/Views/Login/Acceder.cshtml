@model Biblioteca.Controllers.LoginController.AccesoEntrada
@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery Antiforgery

@{
    ViewData["Title"] = "Acceder";
    string? mensaje = ViewData["Mensaje"] as string;
    var mapa = new Dictionary<string, string>
    {
        {"unauthorized", "Inicia sesión para continuar."},
        {"usuario_no_encontrado", "El usuario no existe."},
        {"usuario_bloqueado", "La cuenta está bloqueada."},
        {"password_inactiva", "La contraseña está inactiva. Debe restablecerla."},
        {"credenciales_invalidas", "Usuario o contraseña incorrectos."}
    };
}

<div class="row justify-content-center">
    <div class="col-md-4">
        <h3>Acceder</h3>

        @if (!string.IsNullOrEmpty(mensaje))
        {
            <div class="alert alert-warning">@((mapa.ContainsKey(mensaje)) ? mapa[mensaje] : mensaje)</div>
        }

        <form method="post" asp-action="Acceder" asp-controller="Login">
            @Html.AntiForgeryToken()

            <div class="mb-3">
                <label class="form-label">Usuario</label>
                <input asp-for="UsuarioLogin" class="form-control" maxlength="20" />
                <span asp-validation-for="UsuarioLogin" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Contraseña</label>
                <input asp-for="Password" type="password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <button class="btn btn-primary w-100" type="submit">Ingresar</button>
        </form>
    </div>
</div>
