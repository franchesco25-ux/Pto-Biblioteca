@model Biblioteca.Models.Recursos

@{
    ViewData["Title"] = "Editar";
    var tiporecurso = ViewBag.tiporecursos;
    var editorial = ViewBag.editoriales;
    var genero = ViewBag.generos;
}

<div class="card">
    <div class="card-header bg-light d-flex justify-content-between align-items-center">
        <h4 class="mb-0">Actualizar Recurso</h4>
    </div>
    <div class="card-body">
        <div class="row">
            <form asp-action="editar">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="id" />
                <div class="row">
                    <div class="col-xs-6 col-sm-6 col-md-4">
                        <label class="form-label">Tipo de recursos</label>
                        <select asp-for="tiporecursoid" asp-items="ViewBag.tiporecursos" class="form-select">
                            <option value="">-- Seleccione un tipo de recurso --</option>                
                        </select>
                    </div>
                    <div class="col-xs-6 col-sm-6 col-md-4">
                        <label class="form-label">Editoriales</label>
                        <select asp-for="editorialid" asp-items="ViewBag.editoriales" class="form-select">
                            <option value="">-- Seleccione una editorial --</option>
                        </select>
                    </div>
                    <div class="col-xs-6 col-sm-6 col-md-4">
                        <label class="form-label">Género</label>
                        <select asp-for="generoid" asp-items="ViewBag.generos" class="form-select">
                            <option value="">-- Seleccione un género --</option>
                        </select>
                    </div>
                </div>

                <div class="row">
                    <div class="col-xs-6 col-sm-6 col-md-6">
                        <label asp-for="titulo" class="control-label">Título</label>
                        <input asp-for="titulo" class="form-control" />
                    </div>
                    <div class="col-xs-6 col-sm-6 col-md-6">
                        <label asp-for="subtitulo" class="control-label">Subtítulo</label>
                        <input asp-for="subtitulo" class="form-control" />
                    </div>
                </div>

                <div class="row">
                    <div class="col-xs-6 col-sm-6 col-md-4">
                        <label asp-for="ano_publicacion" class="control-label">Año de publicación</label>
                        <input asp-for="ano_publicacion" class="form-control" />
                    </div>
                    <div class="col-xs-6 col-sm-6 col-md-4">
                        <label asp-for="edicion" class="control-label">Edición</label>
                        <input asp-for="edicion" class="form-control" />
                    </div>
                    <div class="col-xs-6 col-sm-6 col-md-4">
                        <label asp-for="isbn_issn" class="control-label"></label>
                        <input asp-for="isbn_issn" class="form-control" />
                    </div>
                </div>

                <div class="row">
                    <div class="col-xs-6 col-sm-6">
                        <label asp-for="descripcion" class="control-label">Descripción</label>
                        <textarea asp-for="descripcion" class="form-control"></textarea>
                    </div>
                    <div class="col-xs-6 col-sm-6 col-md-3">
                        <label asp-for="clasificacion_ddc" class="control-label"></label>
                        <input asp-for="clasificacion_ddc" class="form-control" />
                    </div>
                    <div class="col-xs-6 col-sm-6 col-md-3">
                        <label asp-for="fecha_ingreso" class="control-label">Fecha de Ingreso</label>
                        <input asp-for="fecha_ingreso" class="form-control" />
                    </div>
                </div>

                <div class="row">
                    <div class="col mt-3">
                        <input type="submit" value="Actualizar recurso" class="btn btn-primary" />
                        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                    </div>
                </div>

            </form>
        </div>

    </div>
</div>
