@model Biblioteca.Models.Sesion

@{
    ViewData["Title"] = "Index";
    List<Recursos> lista = ViewBag.recursos;
}




<div class="card">
    <div class="card-header bg-light d-flex justify-content-between align-items-center">
        <h4 class="mb-0">Recursos</h4>
        <a asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-circle"></i> Nuevo recurso</a>
    </div>
    <div class="card-body">
        <div class="row">
            @foreach (var item in lista)
                    {
            <div class="col-12 col-md-6 col-lg-4 col-xl-3 mb-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-body d-flex flex-column">
                        <div class="d-flex justify-content-between align-items-end">
                            <span class="badge bg-primary">@Html.DisplayFor(modelItem => item.tipo_recurso)</span>
                        </div>

                            <h5 class="card-title mt-2">@Html.DisplayFor(modelItem => item.titulo)</h5>
                            <h6 class="card-subtitle mb-2 text-muted">@Html.DisplayFor(modelItem => item.subtitulo)</h6>

                        <ul class="list-unstyled mt-3 mb-4">
                                <li><strong>Año:</strong> @Html.DisplayFor(modelItem => item.ano_publicacion)</li>
                                <li><strong>Edición:</strong> @Html.DisplayFor(modelItem => item.edicion)</li>
                        </ul>

                        <div class="mt-auto text-center">
                            <a href="#" data-id="@item.id" class="btn btn-sm btn-outline-secondary me-1 btn-see-recurso"><i class="bi bi-eye"></i> Ver</a>
                            <a asp-action="Edit" asp-route-id="@item.id" class="btn btn-sm btn-outline-primary me-1"><i class="bi bi-pencil"></i> Editar</a>
                            <a asp-action="Delete" asp-route-id="@item.id" class="btn btn-sm btn-outline-danger"><i class="bi bi-trash"></i> Eliminar</a>
                        </div>
                    </div>
                </div>
            </div>
            }
        </div>

    </div>
</div>



<div class="modal fade" id="infoModal" tabindex="-1" aria-labelledby="infoModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content" id="infoModalContent">
        </div>
    </div>
</div>

<script>
    var url = '@Url.Action("Details", "Recursos")';
</script>
