@model Biblioteca.Models.Usuario
@{
    ViewData["Title"] = "Create";
}

<h2>Crear usuario</h2>
<hr />

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="row g-3">
        <div class="col-md-4">
            <label asp-for="UsuarioLogin" class="form-label"></label>
            <input asp-for="UsuarioLogin" class="form-control" />
            <span asp-validation-for="UsuarioLogin" class="text-danger"></span>
        </div>
        <div class="col-md-4">
            <label asp-for="PasswordHash" class="form-label">Password</label>
            <input asp-for="PasswordHash" type="password" class="form-control" />
            <span asp-validation-for="PasswordHash" class="text-danger"></span>
        </div>
        <div class="col-md-4">
            <label asp-for="Rol" class="form-label"></label>
            <select asp-for="Rol" class="form-select" asp-items="new SelectList(ViewBag.Roles)"></select>
            <span asp-validation-for="Rol" class="text-danger"></span>
        </div>

        <div class="col-md-3">
            <label asp-for="Identidad" class="form-label"></label>
            <select asp-for="Identidad" class="form-select" asp-items="new SelectList(ViewBag.Identidades)"></select>
            <span asp-validation-for="Identidad" class="text-danger"></span>
        </div>
        <div class="col-md-3">
            <label asp-for="DocumentoIdent" class="form-label"></label>
            <input asp-for="DocumentoIdent" class="form-control" />
            <span asp-validation-for="DocumentoIdent" class="text-danger"></span>
        </div>
        <div class="col-md-3">
            <label asp-for="Nombre" class="form-label"></label>
            <input asp-for="Nombre" class="form-control" />
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>
        <div class="col-md-3">
            <label asp-for="Apellido" class="form-label"></label>
            <input asp-for="Apellido" class="form-control" />
            <span asp-validation-for="Apellido" class="text-danger"></span>
        </div>

        <div class="col-md-4">
            <label asp-for="Telefono" class="form-label"></label>
            <input asp-for="Telefono" class="form-control" />
            <span asp-validation-for="Telefono" class="text-danger"></span>
        </div>
        <div class="col-md-4">
            <label asp-for="Mail" class="form-label"></label>
            <input asp-for="Mail" class="form-control" />
            <span asp-validation-for="Mail" class="text-danger"></span>
        </div>
        <div class="col-md-4">
            <label asp-for="Direccion" class="form-label"></label>
            <input asp-for="Direccion" class="form-control" />
            <span asp-validation-for="Direccion" class="text-danger"></span>
        </div>
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Guardar</button>
        <a asp-action="IndexUsuario" class="btn btn-secondary">Volver</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

