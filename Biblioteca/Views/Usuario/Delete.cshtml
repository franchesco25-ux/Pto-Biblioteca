@model Biblioteca.Models.Usuario
@{
    ViewData["Title"] = "Eliminar usuario";
}

<h2>Eliminar usuario</h2>
<hr />

<div class="alert alert-warning">
    ¿Confirmas eliminar lógicamente al usuario <strong>@Model.UsuarioLogin</strong>?
</div>

<dl class="row">
    <dt class="col-sm-2">Nombre</dt>
    <dd class="col-sm-10">@Model.Nombre</dd>
    <dt class="col-sm-2">Apellido</dt>
    <dd class="col-sm-10">@Model.Apellido</dd>
    <dt class="col-sm-2">Rol</dt>
    <dd class="col-sm-10">@Model.Rol</dd>
</dl>

<form asp-action="Delete" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="UsuarioId" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="IndexUsuario" class="btn btn-secondary">Cancelar</a>
</form>
