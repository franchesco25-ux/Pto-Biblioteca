@model Biblioteca.Models.Usuario
@{
    ViewData["Title"] = "Editar usuario";
}

<h2>Editar usuario</h2>
<hr />

<form asp-action="Edit" method="post">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <input type="hidden" asp-for="UsuarioId" />

    <div class="row g-3">
        <div class="col-md-4">
            <label asp-for="UsuarioLogin" class="form-label"></label>
            <input asp-for="UsuarioLogin" class="form-control" />
            <span asp-validation-for="UsuarioLogin" class="text-danger"></span>
        </div>
        <div class="col-md-4">
            <label asp-for="Nombre" class="form-label"></label>
            <input asp-for="Nombre" class="form-control" />
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>
        <div class="col-md-4">
            <label asp-for="Apellido" class="form-label"></label>
            <input asp-for="Apellido" class="form-control" />
            <span asp-validation-for="Apellido" class="text-danger"></span>
        </div>
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Guardar cambios</button>
        <a asp-action="IndexUsuario" class="btn btn-secondary">Volver</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
