@model IEnumerable<Biblioteca.Models.Usuario>
@{
    ViewData["Title"] = "Usuarios vigentes";
}

<h2 class="mb-3">Usuarios vigentes</h2>

@if (TempData["ok"] is string ok)
{
    <div class="alert alert-success">@ok</div>
}

<p>
    <a asp-action="Create" class="btn btn-primary">Crear nuevo</a>
</p>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Usuario</th>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Rol</th>
            <th>Estado</th>
            <th class="text-nowrap">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model ?? Enumerable.Empty<Biblioteca.Models.Usuario>())
        {
            <tr>
                <td>@item.UsuarioId</td>
                <td>@item.UsuarioLogin</td>
                <td>@item.Nombre</td>
                <td>@item.Apellido</td>
                <td>@item.Rol</td>
                <td>
                    @if (item.CuentaBloqueada)
                    {
                        <span class="badge bg-danger">Bloqueado</span>
                    }
                    else
                    {
                        <span class="badge bg-success">Activo</span>
                    }
                </td>
                <td class="text-nowrap">
                    <a asp-action="Details" asp-route-id="@item.UsuarioId" class="btn btn-sm btn-info">Details</a>
                    <a asp-action="Edit" asp-route-id="@item.UsuarioId" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.UsuarioId" class="btn btn-sm btn-danger">Delete</a>

                    <form asp-action="CambiarBloqueo" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@item.UsuarioId" />
                        <input type="hidden" name="bloquear" value="@(item.CuentaBloqueada ? "false" : "true")" />
                        <button type="submit" class="btn btn-sm @(item.CuentaBloqueada ? "btn-success" : "btn-secondary")">
                            @(item.CuentaBloqueada ? "Desbloquear" : "Bloquear")
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

